<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
	<h2 class="form-signin-heading">请登录</h2>
	
    <%= f.label :email, "输入邮箱", class:"sr-only" %>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "输入邮箱" %>
  
    <%= f.label :password, "输入密码", class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder: "输入密码" %>

  <% if devise_mapping.rememberable? -%>
  <div class="checkbox">
    <label>
      <input type="checkbox" value="remember-me"> 记住我
    </label>
  </div>
  <% end -%>

  
  <button class="btn btn-lg btn-primary btn-block" type="submit">登录</button>
<% end %>
