<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>头像</th>
      <th>手机</th>
      <th>昵称</th>
      <th>百家饭口号</th>
      <th>发布数</th>
      <th>订单数</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= render_avatar_tag(user) %></td>
        <td><%= user.mobile %></td>
        <td><%= user.nickname %></td>
        <td><%= user.signature %></td>
        <td><%= user.publish_count %></td>
        <td><%= user.orders_count %></td>
        <td>
          <%= state_link_to state: user.verified,
                            yes_uri: "/users/#{user.id}/block", 
                            yes_text: "禁用",
                            no_uri: "/cpanel/users/#{user.id}/unblock",
                            no_text: "启用" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="text-align: center;"><%= will_paginate @users, renderer: BootstrapPagination::Rails %></div>