<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-10">
        <h5>用户列表</h5>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>头像</th>
          <th>手机</th>
          <th>昵称</th>
          <th>个人签名</th>
          <th>目标数</th>
          <th>粉丝数</th>
          <th>关注数</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= render_avatar_tag(user) %></td>
            <td><%= user.mobile %></td>
            <td><%= user.nickname %></td>
            <td><%= user.signature %></td>
            <td><%= user.goals.count %></td>
            <td><%= user.followers_count %></td>
            <td><%= user.following_count %></td>
            <td>
              <%= state_link_to state: user.verified,
                                yes_uri: "/users/#{user.id}/block", 
                                yes_text: "禁用",
                                no_uri: "/users/#{user.id}/unblock",
                                no_text: "启用" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div style="text-align: center;"><%= will_paginate @users, renderer: BootstrapPagination::Rails %></div>
</div>

