<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>产品图标</th>
      <th>产品标题</th>
      <th>操作人</th>
      <th>操作人类型</th>
      <th>操作描述</th>
      <th>操作行为</th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.id %></td>
        <td><%= render_image_tag(log.order.item) %></td>
        <td width="15%"><%= render_title_tag(log.order.item) %></td>
        <td><%= log.user.nickname %></td>
        <td><%= render_log_user_type(log) %></td>
        <td><%= log.operation_name %></td>
        <td><%= log.action %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="text-align: center;"><%= will_paginate @logs, renderer: BootstrapPagination::Rails %></div>