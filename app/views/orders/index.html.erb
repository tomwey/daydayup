<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>产品图标</th>
      <th>产品标题</th>
      <th>订单状态</th>
      <th>服务方式</th>
      <th>服务地址</th>
      <th>订单数量</th>
      <th>订单总价</th>
      <th>下单人</th>
      <th>下单时间</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= render_image_tag(order.item) %></td>
        <td width="15%"><%= render_title_tag(order.item) %></td>
        <td><%= render_order_state(order) %></td>
        <td><%= order.service_modes %></td>
        <td><%= order.address %></td>
        <td><%= order.quantity %></td>
        <td><%= order.fee %></td>
        <td><%= order.user.mobile %></td>
        <td width="15%"><%= order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="text-align: center;"><%= will_paginate @orders, renderer: BootstrapPagination::Rails %></div>