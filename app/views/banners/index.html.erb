<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-10">
        <h5>广告列表</h5>
      </div>
      <div class="col-sm-2">
        <%= link_to "新建广告", new_banner_path, class: "btn btn-success pull-right" %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Icon</th>
          <th>Title</th>
          <th>所属类别</th>
          <th>创建时间</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @banners.each do |banner| %>
          <tr>
            <td><%= link_to banner.id, banner %></td>
            <td><%= image_tag banner.image.url(:small), size: '84x84' %></td>
            <td><%= banner.title %></td>
            <td><%= banner.category.try(:name) %></td>
            <td><%= banner.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
            <td>
              <%= link_to '编辑', edit_banner_path(banner), class: "btn btn-xs btn-primary" %>
              <%= link_to '删除', banner_path(banner), data: { confirm: "您确定吗？" }, class: "btn btn-xs btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>


