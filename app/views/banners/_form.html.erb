<div class="col-md-7 col-md-offset-2">
  
  <%= form_for @banner, html: { class: "form-horizontal" } do |f| %>
  <%= render 'shared/error_messages', target: @banner %>
  <div class="form-group">
    <%= f.label :image, "广告图片", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.file_field :image %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :category_id, "所属类别", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.select :category_id, Category.sorted.map { |c| [c.name, c.id] }, { prompt: '--请选择所属类别--' }, { class: "form-control", required: 'true' } %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :title, "标题", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control", placeholder:'可选' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :sort, "显示顺序", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :sort, class: "form-control", placeholder:'可选' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :body, "内容", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "redactor form-control", rows: 40, cols: 120, placeholder: '必填' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
      <%= f.submit '提交', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>

