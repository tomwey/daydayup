<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Icon</th>
      <th>菜品标题</th>
      <th>服务地址</th>
      <th>卖家手机</th>
      <th>卖家昵称</th>
      <th>发布时间</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.id, item %></td>
        <td><%= render_image_tag(item) %></td>
        <td width="15%"><%= item.title %></td>
        <td width="15%"><%= item.address %></td>
        <td width="10%"><%= item.user.mobile %></td>
        <td width="10%"><%= item.user.nickname %></td>
        <td width="15%"><%= item.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td width="5%">
          <%= link_to '删除', item, method: :delete, data: { confirm: '您确定吗？' }, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="text-align: center;"><%= will_paginate @items, renderer: BootstrapPagination::Rails %></div>