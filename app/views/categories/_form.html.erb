<div class="col-md-6 col-md-offset-3">
  
  <%= render 'shared/error_messages', target: @category %>
  <%= form_for @category, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "类别名称", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, "显示顺序", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :sort, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
      <%= f.submit '提交', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
