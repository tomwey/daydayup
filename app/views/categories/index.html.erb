<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-10">
        <h5>类别列表</h5>
      </div>
      <div class="col-sm-2">
        <%= link_to "新建类别", new_category_path, class: "btn btn-success pull-right" %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>类别名</th>
          <th>目标总数</th>
          <th>显示顺序</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= render_goals_count(category) %></td>
            <td><%= category.sort %></td>
            <td>
              <%= link_to "编辑", edit_category_path(category), class: "btn btn-xs btn-primary" %>
              <%= link_to "删除", category_path(category), method: :delete, class: "btn btn-xs btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

